{
    "name": "vscode-dl-list-preview",
    "displayName": "DL List Preview (colon-based)",
    "description": "Adds colon-based definition list support to VS Code's built-in Markdown preview.",
    "version": "0.1.1",
    "icon": "icon.png",
    "publisher": "kanemu-dev",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/kanemu/dl-list-markdown.git",
        "directory": "packages/vscode-dl-list-preview"
    },
    "homepage": "https://github.com/kanemu/dl-list-markdown/tree/main/packages/vscode-dl-list-preview",
    "bugs": {
        "url": "https://github.com/kanemu/dl-list-markdown/issues"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "markdown",
        "definition list",
        "dl",
        "preview"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "markdown.markdownItPlugins": true,
        "configuration": {
            "title": "DL List Preview",
            "properties": {
                "dlListPreview.ddIndent": {
                    "type": "number",
                    "default": 4,
                    "minimum": 1,
                    "maximum": 12,
                    "description": "Indent (spaces) required for dd lines. Default: 4."
                }
            }
        }
    },
    "scripts": {
        "build": "tsup",
        "package": "vsce package --no-dependencies",
        "clean": "rimraf dist",
        "test": "vitest run",
        "dev:test": "vitest"
    },
    "dependencies": {
        "markdown-it-dl-list": "workspace:^0.1.1"
    },
    "devDependencies": {
        "@types/node": "^25.0.8",
        "@types/vscode": "^1.85.0",
        "rimraf": "^6.1.2",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.17",
        "vsce": "^2.15.0"
    }
}